<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 引入配置文件 -->
<mapper namespace="com.wgq.chat.contact.dao.ContactDao">


    <resultMap id="contactResultMap" type="com.wgq.chat.contact.po.Contact">
        <result column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="friend_id" property="friendId"/>
        <result column="apply_time" property="applyTime"/>
        <result column="audit_time" property="auditTime"/>
    </resultMap>

    <insert id="insert">
        <if test="contact != null">
            insert into contact
            <trim prefix="(" suffix=")"  suffixOverrides=",">
                <if test="contact.id != null">
                    id,
                </if>
                <if test="contact.roomId != null">
                    room_id,
                </if>
                <if test="contact.userId != null">
                    user_id,
                </if>
                <if test="contact.friendId != null">
                    friend_id,
                </if>
                <if test="contact.applyTime != null">
                    apply_time,
                </if>
                <if test="contact.auditTime != null">
                    audit_time,
                </if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="contact.id != null">
                    #{contact.id},
                </if>
                <if test="contact.roomId != null">
                    #{contact.roomId},
                </if>
                <if test="contact.userId != null">
                    #{contact.userId},
                </if>
                <if test="contact.friendId != null">
                    #{contact.friendId},
                </if>
                <if test="contact.applyTime != null">
                    #{contact.applyTime},
                </if>
                <if test="contact.auditTime != null">
                    #{contact.auditTime},
                </if>
            </trim>
        </if>
    </insert>
    <update id="refreshOrCreateLastTime">
        insert into contact(`room_id`,`user_id`,`last_message_id`,`last_send_time`)
        values
        <foreach collection="memberUserList" item="userId" separator=",">
            (#{roomId},#{userId},#{messageId},#{lastSendTime})
        </foreach>
        `last_message_id`=VALUES(last_message_id),
        `last_send_time`=VALUES(last_send_time)
    </update>
    <delete id="removeById">
        delete from contact where id = #{id}
    </delete>
    <select id="getContact" resultMap="contactResultMap">
        select * from contact where user_id = #{userId} and friend_id = #{friendId}
    </select>

    <select id="getMyContact" resultMap="contactResultMap">
        select * from contact where user_id = #{userId}
    </select>
</mapper>
